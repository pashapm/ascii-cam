<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical"><RadioGroup android:id="@+id/RadioGroup02" android:layout_height="wrap_content" android:orientation="horizontal" android:background="#aaaaaa" android:layout_width="wrap_content">
			<RadioButton android:textColor="#ff000000" android:typeface="monospace" android:checked="true" android:text="@string/grayscale" android:textSize="14sp" android:gravity="center" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="fill_parent" android:id="@+id/radio_gs"></RadioButton>
			<RadioButton android:textColor="#000000" android:text="@string/colorize" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="fill_parent" android:textSize="14sp" android:id="@+id/radio_color"></RadioButton>
		</RadioGroup><RadioGroup android:id="@+id/RadioGroup01"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_weight="1"
			android:background="#aaaaaa">
			<CheckBox android:textColor="#ff000000"
				android:textScaleX="1" android:typeface="monospace"
				android:layout_width="fill_parent" android:background="#aaaaaa"
				android:text="@string/invert" android:layout_weight="1"
				android:layout_height="fill_parent" android:layout_marginRight="10dip"
				android:textSize="14sp" android:gravity="center"
				android:paddingLeft="20dip" android:id="@+id/check_invert"></CheckBox>
			<CheckBox android:layout_width="fill_parent"
				android:layout_weight="1" android:text="@string/bw"
				android:textColor="#000000" android:layout_height="fill_parent"
				android:textSize="14sp" android:paddingRight="10dip"
				android:visibility="visible" android:gravity="center" android:id="@+id/check_bw"></CheckBox>

		</RadioGroup>
</LinearLayout>
